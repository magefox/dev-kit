#!/bin/bash

COMMAND=$1
shift;
ARGS="$@"

green=$(tput setaf 2)
normal=$(tput sgr0)

if [ -n "$COMMAND" ]; then
    case "$COMMAND" in
        xdebug)
            if [ "$1" == "disable" ]; then
                command/docker php sed -i -e 's/^zend_extension/\;zend_extension/g' /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
                command/docker stop
                command/docker start
                echo "${green}Xdebug has been disabled.${normal}"
            elif [ "$1" == "enable" ]; then
                command/docker php sed -i -e 's/^\;zend_extension/zend_extension/g' /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
                command/docker stop
                command/docker start
                echo "${green}Xdebug has been enabled.${normal}"
            else
                echo "Please specify either 'enable' or 'disable' as an argument"
            fi ;;
        *) command/$COMMAND "$@" ;;
    esac
else
	echo "Command not found."
fi