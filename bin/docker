#!/bin/bash

COMMAND=$1
shift;
ARGS="$@"

if [ -n "$COMMAND" ]; then
    case "$COMMAND" in
        start) docker-compose up -d "$@" ;;
        stop) docker-compose stop "$@" ;;
        php) docker-compose exec php "$@" ;;
        nginx) docker-compose exec nginx "$@" ;;
        *) docker-compose "$@" ;;
    esac
else
	echo "Docker command not found."
fi